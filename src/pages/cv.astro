---
import PageLayout from "@/layouts/Base.astro";

const meta = {
	title: "CV",
	description: "View or download my curriculum vitae",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title">Curriculum Vitae</h1>
		<p>You can view my CV below or download it directly.</p>
		<div class="flex gap-4">
			<a
				href="/cv.pdf"
				class="hover:text-link inline-flex items-center gap-1"
				target="_blank"
				rel="noopener noreferrer"
			>
				<span>View CV</span>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24">
					<path
						fill="currentColor"
						d="M14 3v2h3.59l-9.83 9.83l1.41 1.41L19 6.41V10h2V3zm-2 16H5V5h7V3H5c-1.11 0-2 .89-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7H12z"
					></path>
				</svg>
			</a>
			<a href="/cv.pdf" class="hover:text-link inline-flex items-center gap-1" download>
				<span>Download CV</span>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24">
					<path
						fill="currentColor"
						d="m12 16l-5-5l1.4-1.4l2.6 2.6V4h2v8.2l2.6-2.6L17 11zm-6 4q-.825 0-1.412-.587T4 18v-3h2v3h12v-3h2v3q0 .825-.587 1.413T18 20z"
					></path>
				</svg>
			</a>
		</div>
	</div>
</PageLayout>
