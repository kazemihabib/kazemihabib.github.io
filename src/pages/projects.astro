---
import PageLayout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";
import { projects } from "@/data/projects";

const meta = {
	title: "Projects",
	description: "A showcase of my personal projects and work",
};
---

<PageLayout meta={meta}>
	<div class="space-y-6">
		<h1 class="title mb-6">Projects</h1>
		<ul class="space-y-8 sm:space-y-4">
			{
				projects.map((project) => (
					<li class="group flex flex-col gap-2 border-b border-dashed border-gray-200 pb-4 sm:flex-row sm:items-center sm:justify-between dark:border-gray-700">
						<div class="flex-1">
							<div class="flex items-center gap-2">
								<time class="hidden min-w-[60px] text-gray-500 sm:block dark:text-gray-400">
									{project.year}
								</time>
								<a
									href={project.link}
									target="_blank"
									rel="noopener noreferrer"
									class="cactus-link inline-flex items-center text-lg font-medium group-hover:underline"
								>
									{project.title}
									<Icon name="tabler:external-link" class="ml-1 h-4 w-4 -translate-y-0.5" />
								</a>
							</div>
							<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">{project.description}</p>
						</div>
						<div class="flex flex-wrap gap-2">
							{project.tags.map((tag) => (
								<span class="bg-accent/10 text-accent rounded-full px-2 py-1 text-xs">{tag}</span>
							))}
						</div>
					</li>
				))
			}
		</ul>
	</div>
</PageLayout>
